@import "../movie/movie-template.wxss";

.movie-list-container{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.movie-head{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /*display:flex;
  flex-direction: row;
  justify-content:space-between;*/ 
}
.slogan {
  font-size: 24rpx;
  flex: 1; 
}

.more {
  flex: 1;
  text-align: right;
}

.more-text {
  vertical-align: middle;
  margin-right: 10rpx; 
  color: #1f4ba5;
  text-align: right;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}
.movies-container{
  display: flex;
  flex-direction: row;
}