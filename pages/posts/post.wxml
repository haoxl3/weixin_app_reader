<import src="post-item/post-item-template.wxml"/>
<view>
  <swiper catchtap="onSwiperTap" indicator-dots="true" autoplay="true" interval="2000">
    <swiper-item>
      <image src="/images/wx.png" data-postId="{{item.postId}}"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png" data-postId="{{item.postId}}"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/iqiyi.png" data-postId="{{item.postId}}"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{posts_key}}" wx:for-item="item" wx:for-idex="index">
    <view catchtap="onPostTap" data-postId="{{item.postId}}">
      <template is="postItem" data="{{...item}}"/>
    </view>
  </block>
</view>